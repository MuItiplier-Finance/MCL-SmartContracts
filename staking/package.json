{
  "name": "safety-module",
  "version": "1.0.0",
  "description": "Safety Module for the bMXX Protocol",
  "scripts": {
    "run-env": "npm i && tail -f /dev/null",
    "buidler": "buidler",
    "buidler-kovan": "buidler --network kovan",
    "buidler-ropsten": "buidler --network ropsten",
    "buidler-main": "buidler --network main",
    "buidler help": "buidler help",
    "compile": "buidler compile",
    "types-gen": "typechain --target ethers-v5 --outDir ./types './build/contracts/*.json'",
    "test": "buidler test",
    "test-pei": "npm run test test/__setup.spec.ts test/bMxxIncentivesController/*.spec.ts",
    "test-psi": "npm run test test/__setup.spec.ts test/StakedbMXX/StakedbMXX-basic.spec.ts test/StakedbMXX/StakedbMXX-redeem.spec.ts test/StakedbMXX/StakedbMXX-transfers.spec.ts",
    "coverage": "buidler coverage",
    "dev:deployment": "buidler dev-deployment",
    "ropsten:deployment": "npm run buidler-ropsten -- common-deployment --verify",
    "kovan:deployment": "npm run buidler-kovan -- common-deployment --verify",
    "main:deployment": "npm run buidler-main -- common-deployment --verify",
    "dev:prettier": "prettier --write ."
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.0",
    "@nomiclabs/hardhat-ganache": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "3.1.0",
    "@typechain/ethers-v4": "1.0.0",
    "@typechain/ethers-v5": "^5.0.0",
    "@typechain/truffle-v5": "2.0.2",
    "@typechain/web3-v1": "1.0.0",
    "@types/chai": "4.2.11",
    "@types/lowdb": "1.0.9",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.14.20",
    "bignumber.js": "9.0.0",
    "chai": "^4.2.0",
    "chai-bignumber": "3.0.0",
    "ethereum-waffle": "^3.2.1",
    "ethers": "^5.0.26",
    "hardhat": "^2.0.7",
    "hardhat-typechain": "^0.3.4",
    "husky": "^4.2.5",
    "lowdb": "1.0.0",
    "moment": "^2.27.0",
    "prettier": "^2.0.5",
    "prettier-plugin-solidity": "^1.0.0-alpha.56",
    "pretty-quick": "^2.0.1",
    "solidity-coverage": "^0.7.9",
    "ts-generator": "^0.1.1",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typechain": "^4.0.1",
    "typechain-target-ethers-v5": "^1.2.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "license": "AGPLv3",
  "dependencies": {
    "tmp-promise": "^3.0.2"
  }
}
